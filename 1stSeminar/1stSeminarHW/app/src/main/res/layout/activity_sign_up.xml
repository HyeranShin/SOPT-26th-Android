<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:paddingHorizontal="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sopt_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="#002399"
            android:text="회원가입"
            android:textSize="22dp"/>

        <EditText
            android:id="@+id/et_email_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#E8E9E8"
            android:inputType="textEmailAddress"
            android:hint="이메일"
            android:padding="8dp" />

        <EditText
            android:id="@+id/et_password_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#E8E9E8"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:padding="8dp" />

        <EditText
            android:id="@+id/et_password_check_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#E8E9E8"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:padding="8dp" />

        <EditText
            android:id="@+id/et_nickname_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:background="#E8E9E8"
            android:hint="GitHub 닉네임"
            android:padding="8dp" />

        <Button
            android:id="@+id/btn_complete_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#002399"
            android:text="가입완료"
            android:textColor="@android:color/white" />


    </LinearLayout>


</LinearLayout>